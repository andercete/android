<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/bAlta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Dar de alta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/eAltaEmail"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/bAlta"
        app:layout_constraintStart_toStartOf="@+id/eAltaTelefono"
        app:layout_constraintTop_toBottomOf="@+id/eAltaTelefono" />

    <Button
        android:id="@+id/bAltaLimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Limpiar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bAlta"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/eAltaPoblacion"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Poblacion"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/eAltaCif"
        app:layout_constraintStart_toStartOf="@+id/eAltaDireccion"
        app:layout_constraintTop_toBottomOf="@+id/eAltaDireccion" />

    <EditText
        android:id="@+id/eAltaNombre"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/eAltaDireccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/eAltaDireccion"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Direccion"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/eAltaPoblacion"
        app:layout_constraintStart_toStartOf="@+id/eAltaNombre"
        app:layout_constraintTop_toBottomOf="@+id/eAltaNombre" />

    <EditText
        android:id="@+id/eAltaTelefono"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/eAltaEmail"
        app:layout_constraintStart_toStartOf="@+id/eAltaCif"
        app:layout_constraintTop_toBottomOf="@+id/eAltaCif" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alta Socios"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/eAltaNombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eAltaCif"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="CIF"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/eAltaTelefono"
        app:layout_constraintStart_toStartOf="@+id/eAltaPoblacion"
        app:layout_constraintTop_toBottomOf="@+id/eAltaPoblacion" />

</androidx.constraintlayout.widget.ConstraintLayout>