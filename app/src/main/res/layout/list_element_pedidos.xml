<!-- list_element_pedidos.xml -->

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iconImagePedidoView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                app:srcCompat="@drawable/pedidoimage"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/iconImagePedidoView"
                android:layout_toRightOf="@+id/iconImagePedidoView"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idArticuloPedidoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="12dp"
                    android:text="Partner ID: P123"
                    android:textSize="15sp" />

                <!-- Example for idLinea -->
                <TextView
                    android:id="@+id/nombrePedidoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="12dp"
                    android:text="Linea ID: L456"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/descripcionPedidoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:paddingLeft="12dp"
                    android:text="TuTextoAqui"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/categoriaPedidoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:paddingLeft="12dp"
                            android:text="Cantidad: 5"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/proveedorPedidoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:paddingLeft="12dp"
                            android:text="Descuento: 10%"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/precioPedidoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:paddingLeft="12dp"
                            android:text="Precio: $50.00"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Repeat the pattern for other TextViews -->

            </LinearLayout>

        </RelativeLayout>

        <!-- Add additional TextViews for cantidad, descuento, precio, etc. -->

    </LinearLayout>
</androidx.cardview.widget.CardView>